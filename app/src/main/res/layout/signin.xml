<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/signinbg" >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/signinlogo"
            android:layout_gravity="center_horizontal"
            android:layout_margin="70dp"



            />



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >




            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView

                    android:id="@+id/back"
                    android:layout_width="21dp"
                    android:layout_height="25dp"
                    android:src="@drawable/back"
                    android:layout_margin="16dp"
                    />


                <customfonts.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textSize="22dp"
                    android:textColor="#fff"
                    android:layout_marginLeft="16dp"
                    android:layout_margin="16dp"

                    />




            </LinearLayout>


            <LinearLayout
                android:background="@drawable/signin"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >


                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_height="1dp"
                    android:background="@color/signintext" />

                <customfonts.MyEditText
                    android:textSize="16dp"
                    android:id="@+id/edt_signin_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textColorHint="@color/signintext"
                    android:textColor="@color/signintext"
                    android:layout_marginLeft="60dp"
                    android:inputType="text"
                    android:background="#0000"
                    android:maxLength="100"

                    android:padding="16dp"
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="35dp"
                    android:layout_marginRight="65dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_height="1dp"
                    android:background="@color/signintext" />




                <customfonts.MyEditText
                    android:textSize="16dp"
                    android:id="@+id/edt_signin_password"
                    android:drawablePadding="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:textColorHint="@color/signintext"
                    android:textColor="@color/signintext"
                    android:layout_marginLeft="60dp"
                    android:inputType="textPassword"
                    android:background="#0000"
                    android:padding="16dp"
                    android:maxLength="20"

                    android:drawableLeft="@drawable/password"
                    android:layout_marginRight="60dp"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_height="1dp"
                    android:background="@color/signintext"
                    android:layout_marginBottom="63dp"
                    />


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="160dp"
            android:background="@color/signintext"
            android:layout_gravity="bottom"
            android:layout_marginBottom="85dp"
            android:layout_marginLeft="110dp"
            />

    </FrameLayout>

    <customfonts.MyTextView
        android:id="@+id/btn_signin_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect"
        android:text="Submit"
        android:textSize="20dp"
        android:textColor="#9e3d41"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="13dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:onClick="signin"

        />







</RelativeLayout>